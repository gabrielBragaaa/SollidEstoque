<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Estoque.controller.ConsultarEstoqueController">
    <children>
        <!-- Barra de busca no topo -->
        <HBox fx:id="hBoxBusca" prefHeight="25.0" prefWidth="456.0" spacing="10" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="424.0" AnchorPane.topAnchor="20.0">
            <children>
                <TextField fx:id="txtCampoBuscar" promptText="Buscar por nomeFornecedor ou Id do produto...">
                </TextField>
            <ComboBox fx:id="categoriaCombo" prefHeight="25.0" prefWidth="101.0" promptText="Categoria" />
            <ComboBox fx:id="fornecedorCombo" prefHeight="25.0" prefWidth="106.0" promptText="Fornecedor" />
                <Button fx:id="btnBuscarProduto" onAction="#buscarProdutos" style="-fx-background-color: #80ff80;" text="Buscar" />
            </children>
        </HBox>

        <!-- Tabela responsiva -->
        <TableView fx:id="tblProduto" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="70.0">
            <columns>
                <TableColumn fx:id="fornecedor" prefWidth="137.0" text="Fornecedor" />
                <TableColumn fx:id="codigo" prefWidth="137.0" text="Codigo" />
                <TableColumn fx:id="categoria" prefWidth="137.0" text="Categoria" />
                <TableColumn fx:id="nomeProduto" prefWidth="255.0" text="Nome" />
                <TableColumn fx:id="quantidade_inicial" minWidth="0.0" prefWidth="61.0" text="Qtd." />
                <TableColumn fx:id="preco_unitario" prefWidth="137.0" text="Preço Unitário" />
            </columns>
        </TableView>
          <Button layoutX="777.0" layoutY="19.0" onAction="#buscarPhome" style="-fx-background-color: red;" text="HOME" />
      <ImageView fitHeight="30.0" fitWidth="39.0" layoutX="848.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: 100;">
         <image>
            <Image url="@imagens/Sollid.png" />
         </image>
      </ImageView>

    </children>
</AnchorPane>
